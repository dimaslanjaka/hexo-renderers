{
  "$schema": "http://json.schemastore.org/nodemon",
  "exec": "yarn build && node ./test/_config.loader.js && node nodemon.runner.js",
  "watch": [
    "./lib/src/**/*.{ts,js}",
    "./packages/**/src/**/*.{ts,js}",
    "./test/_config.defaults.yml",
    "./lib/package.json",
    "./test/package.json",
    "./test/_config.loader.js",
    "**/yarn.lock",
    "./nodemon.runner.js"
  ],
  "ignore": [
    "**/dist/**",
    "**/node_modules/**",
    "**/tmp/**"
  ],
  "delay": 3000,
  "ext": "*",
  "verbose": false
}