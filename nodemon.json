{
  "$schema": "http://json.schemastore.org/nodemon",
  "exec": "npm start",
  "watch": [
    "./lib/src/**/*.ts",
    "./packages/**/src/**/*.ts",
    "./test/_config.defaults.yml",
    "lib/package.json",
    "test/package.json",
    "test/_config.loader.js",
    "**/yarn.lock"
  ],
  "ignore": [
    "**/dist/**",
    "**/node_modules/**"
  ],
  "delay": 3000,
  "ext": "*",
  "verbose": false
}