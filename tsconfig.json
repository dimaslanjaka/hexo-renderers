{
  "compilerOptions": {
    /* Basic Options */
		"target": "es5",
		"module": "commonjs",
		"lib": ["ESNext"],
		"outDir": "./dist",
    "allowJs": true,
    "checkJs": false,

		/* Strict Type-Checking Options */
		"strict": true,

		/* Module Resolution Options */
		"moduleResolution": "node",
		"esModuleInterop": true,

		/* Advanced Options */
		"forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["**/dist/**", "**/node_modules/**"]
}
