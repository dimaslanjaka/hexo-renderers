{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "noEmit": false,
    "rootDir": "src"
  },
  "include": ["./src/**/*", "./src/*"],
  "exclude": ["**/dist/**", "**/*.spec.ts", "**/*.test.ts"]
}
